<%- include('../../partials/header.ejs'); %>
<body>
    <%- include('../../partials/navbar.ejs'); %> 
    <div class="container">
        <hr>
        <h2>Lista de Usuários</h2>
        <a class="btn btn-primary" href="/admin/usuarios/new">Criar novo usuário</a>
        <hr>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Ações</th>
            </thead>
            <tbody>
                <% usuarios.forEach(usuarios => { %>
                    <tr>
                        <th scope="row"><%= usuarios.id %></th>
                        <td><%= usuarios.nome %></td>
                        <td>
                            <a href="/admin/usuarios/editar/<%= usuarios.id %>" class="btn btn-warning">Editar</a>
                            <form method="POST" action="/usuarios/delete" style="display: inline;" onsubmit="confirmDelete(event, this)">
                                <input type="hidden" name="id" value="<%= usuarios.id %>">
                                <button class="btn btn-danger">Excluir</button>
                            </form>      
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        
